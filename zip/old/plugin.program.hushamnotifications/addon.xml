<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.hushamnotifications" version="1.0.2"
       name="Husham Notifications" provider-name="Husham.com">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  	<import addon="script.module.addon.common" optional="true" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
  	<summary>Husham.com NEWS</summary>
  	<description>Receive Important HUSHAM.COM Notifications. Unsubscribe within Add-on Settings.</description>
	<description>This Notification script is based on TVA Notification script.</description>
  	<disclaimer>HUSHAM.COM take no responsibility for any problems this plugin might in any way, form, shape or size cause.</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
  	<forum>https://www.youtube.com/user/hmemar22</forum>
  	<website>http://www.husham.com</website>
  	<source></source>
  	<email></email>
  </extension>
</addon>
